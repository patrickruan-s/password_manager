<h1>New Entry</h1>
<%= form_with(model: @entry) do |f| %>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                        <div class="form-floating mb-3">
                            <%= f.text_field(:name, placeholder: 'Name', class: 'form-control') %>
                            <%= f.label :name %>
                        </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                        <div class="form-floating mb-3">
                            <%= f.text_field(:url, placeholder: 'url', class: 'form-control') %>
                            <%= f.label :url %>
                        </div>
                </div>
        </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body"> 
                    <div class="form-floating mb-3">
                        <%= f.text_field(:username, placeholder: 'username', class: 'form-control') %>
                        <%= f.label :username %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-floating mb-3">
                        <%= f.text_field(:password, placeholder: 'password', class: 'form-control') %>
                        <%= f.label :password %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col d-flex justify-content-center">
            <div>
                <%= f.submit('Create New Entry', class: 'btn btn-primary form-control') %>
            </div>
        </div>
    </div>
<% end %>
<%= turbo_frame_tag('main-dashboard') do %>
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="mb-0">New Entry</h1>
        <%= link_to("Cancel", entries_path, class: 'btn btn-sm btn-outline-danger') %>
    </div>

    <% if @entry.errors.any? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
            <h4>Please fix the errors below:</h4>
            <ul class="mb-0">
                <% @entry.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= form_with(model: @entry) do |f| %>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <%= f.text_field(:name, placeholder: 'Name', class: 'form-control') %>
                    <%= f.label :name %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <%= f.text_field(:url, placeholder: 'URL', class: 'form-control') %>
                    <%= f.label :url, 'URL' %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <%= f.text_field(:username, placeholder: 'Username', class: 'form-control') %>
                    <%= f.label :username %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <%= f.password_field(:password, placeholder: 'Password', class: 'form-control') %>
                    <%= f.label :password %>
                </div>
            </div>
            <div class="col-12 d-flex justify-content-end mt-4">
                <%= f.submit('Create Entry', class: 'btn btn-primary px-4') %>
            </div>
        </div>
    <% end %>
<% end %>
